<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="14dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/animal_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/dog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Собака"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Кошка"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_horse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Конь"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_is_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Это собака"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_is_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Это кошка"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_is_horse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Это конь"
            android:textSize="12sp" />

    </LinearLayout>

    <Button
        android:id="@+id/next_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:backgroundTint="#EC8C68"
        android:text="Next"
        android:textColor="@color/white" />


</androidx.appcompat.widget.LinearLayoutCompat>